<p style="color: green"><%= notice %></p>

<%= form_with(model: @new_wallet, class: "mb-3 form-outline") do |form| %>
  <%= form.text_field :name, placeholder: t("first_wallet_name"), class: "form-control"  %>

<%end %>


<div id="wallets">
  <table class="table table-borderless">
    <thead>
      <tr>
        <th scope="col"><%= t('wallet') %></th>
        <th scope="col"><%= t('created_at') %></th>
      </tr>
    </thead>
    <tbody>
      <% @wallets.each do |wallet| %>
        <tr id="<%= dom_id wallet %>">
          <td scope="row"><%=link_to  wallet.name, wallet, class: "link-opacity-10-hover" %></th>
          <td><%= wallet.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

