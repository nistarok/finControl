<% if @statement.present? %>
  <div id="accounts">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col"><%= t('transaction') %></th>
          <th scope="col"><%= t('tags') %></th>
          <th scope="col"><%= t('value') %></th>
        </tr>
      </thead>
      <tbody>
        <% @statement.transactions.each do |statement| %>
          <tr id="<%= dom_id statement %>">
            <td scope="row"><%=link_to  statement.name, statement, class: "link-opacity-10-hover" %></th>
            <td scope="row"><%=link_to  statement.tags, statement, class: "link-opacity-10-hover" %></th>
            <td><%= statement.decimal_value %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<div>
  <%= button_to t('transactions'), bank_transactions_path(), method: :get, params: {wallet_id: @wallet.id}, class: "btn btn-primary" %>
</div>
